@model PymeTamFinal.Modelos.ModelosDominio.Cliente
@{
    Layout = null;
}
@Html.HiddenFor(a=>a.idPais)
@Html.HiddenFor(a=>a.idEstado)
<div class="formularioUno">
    <div class="bill-to">
        <p>Datos de cliente</p>
    </div>
    <label>Nombre</label>
    @Html.TextBoxFor(a => a.nombre, new { placeHolder = "Nombre *",disabled = "disabled" })
    <label>Primer apellido</label>
    @Html.TextBoxFor(a => a.apPaterno, new { placeholder = "Primer Apellido *", disabled = "disabled" })
    <label>Segundo apellido</label>
    @Html.TextBoxFor(a => a.apMaterno, new { placeholder = "Segundo Apellido", disabled = "disabled" })

    <label>Telefono</label>
    @Html.TextBoxFor(a => a.telefono, new { placeholder = "Telefono *", disabled = "disabled" })

</div>
<div class="formularioDos">
    <div class="bill-to">
        <p>Información de ubicación</p>
    </div>
    <label>País</label>
    @Html.DropDownList("idPais", (IEnumerable<SelectListItem>)ViewBag.paises, new { @class = "idPais", disabled = "disabled" })
    <label>Estado</label>
    @Html.DropDownList("idEstado", (IEnumerable<SelectListItem>)ViewBag.estados, new { disabled = "disabled" })
    <label>Ciudad, municipio o delegación</label>
    @Html.TextBoxFor(a => a.ciudad, new { placeHolder = "Ciudad o Provincia", disabled = "disabled" })
    <label>Dirección de envió linea uno</label>
    @Html.TextBoxFor(a => a.direccionEnvioLinea1, new { placeholder = "Dirección linea 1 *", disabled = "disabled" })
    <label>Dirección de envió linea dos</label>
    @Html.TextBoxFor(a => a.direccionEnvioLinea2, new { placeholder = "Dirección linea 2", disabled = "disabled" })
    <label>Codigo postal</label>
    @Html.TextBoxFor(a => a.cp, new { placeholder = "Codigo postal", disabled = "disabled" })

</div>
<div class="row">
    <div class="col-sm-12">
        <div class="form-completo">
            <div class="bill-to">
                <p>Información de facturación</p>
            </div>
            <label>Razón social</label>
            @Html.TextBoxFor(a => a.razonSocial, new { placeHolder = "Razón social", disabled = "disabled" })
            <label>Dirección de facturación linea uno</label>
            @Html.TextBoxFor(a => a.direccionFacturacionLinea1, new { placeHolder = "Dirección de facturación linea 1", disabled = "disabled" })
            <label>Dirección de facturación linea dos</label>
            @Html.TextBoxFor(a => a.direccionFacturacionLinea2, new { placeHolder = "Dirección de facturación linea 2", disabled = "disabled" })
            <label>RFC</label>
            @Html.TextBoxFor(a => a.rfc, new { placeHolder = "RFC", disabled = "disabled" })
        </div>
    </div>
</div>