@model IEnumerable<PymeTamFinal.Modelos.ModelosDominio.CompraModel>
@{
    ViewBag.Title = "Mis Pedidos";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}
<link href="~/Scripts/datatables/DataTables-1.10.9/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<div class="section">
    <div class="container">
        <div class="col-sm-3">
            <div class="left-sidebar">
                <div class="brands_products">
                    <!--brands_products-->
                    <h2>Menu</h2>
                    <div class="brands-name">
                        @{Html.RenderAction("MenuAdmCliente", "TiendaWidgets");}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-9">
            <table id="pedidos" class="table table-responsive table-condensed">
                <thead>
                    <tr>
                        <td>
                            #Pedido
                        </td>
                        <td>
                            Fecha
                        </td>
                        <td>
                            Estatus
                        </td>
                        <td>
                            Tipo de pago
                        </td>
                        <td>
                            Monto MXN
                        </td>
                        <td>Opciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.idOrden
                            </td>
                            <td>
                                @item.ordenFecha.ToShortDateString() | @Html.haceTiempo(item.ordenFecha)
                            </td>
                            <td>
                                @item.ordenEstadoPedido
                            </td>
                            <td>
                                @item.ordenTipoPago
                            </td>
                            <td>
                                <a tabindex="0" data-html="true" data-toggle="popover" data-trigger="focus" title="Detalle (Monto)" data-content="<p>Sub Total: @Html.formatoPrecio(item.ordenSubTotal) </p><p>Descuento: @Html.formatoPrecio(item.ordenDescuento) </p><p>Costo de Envio: @Html.formatoPrecio(item.costoEnvio) </p><p>Total: @Html.formatoPrecio(item.ordenTotal) </p>"  data-id="@item.idOrden" class="btn btn-xs btn-default monto">@Html.formatoPrecio(item.ordenTotal)</a>
                            </td>
                            <td>
                                <a type="button" class="btn btn-xs btn-default detalle" data-id="@item.idOrden" href="#">Detalle</a> @if (item.ordenPagado)
                                {<span>| </span><a class="btn btn-xs btn-default" target="_blank" href="@Url.Action("Recibo", "Comprar", new { Area = "CheckOut", id = item.idOrden })">Recibo</a>}  @if (!item.ordenPagado)
                                { <span>| </span><a data-id="@item.idOrden" class="btn btn-xs btn-default pagar">Pagar</a>  }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
