<!DOCTYPE html>
<html>

<head>
    @{Html.RenderAction("Head", "TiendaWidgets");}
    @RenderSection("head", required: false)
</head>
<body>
    @{Html.RenderAction("ContenidoCabecera", "TiendaWidgets");}
