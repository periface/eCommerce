@model PymeTamFinal.Modelos.ModelosVista.ProductoDetalleViewModel
@{
    Layout = null;
}
@if (!Model.disponibleSinStock && Model.stock > 0)
{
    
    <span>
        @*<label>Cantidad:</label>*@
        @*<input type="number" id="cantidad" max="@Model.stock" value="1">*@
        <button type="button" data-id="@Model.idProducto" class="btn btn-sm btn-fefault cart _cart">
            <i class="fa fa-shopping-cart"></i>
            Agregar al carro
        </button>
    </span>
    <div class="row">
        <div class="col-sm-12">

            <p>
                <b id="disp">
                    Disponibilidad: @Html.Disponibilidad(Model.stock)
                </b>
            </p>
        </div>
    </div>
}
else
{
    if (!Model.disponibleSinStock && Model.stock <= 0)
    {
        <span>
            @*<label>Cantidad:</label>*@
            @*<input type="number" id="cantidad" min="1" value="0" max="@Model.stock">*@
            <button type="button" disabled class="btn btn-sm btn-fefault cart disabled">
                <i class="fa fa-shopping-cart"></i>
                Agregar al carro
            </button>
        </span>
        <div class="row">
            <div class="col-sm-12">

                <p>
                    <b id="disp">
                        Disponibilidad: @Html.Disponibilidad(Model.stock)
                    </b>
                </p>
            </div>
        </div>
    }
    if (Model.disponibleSinStock && Model.stock == 0)
    {
        <span>
            @*<label>Cantidad:</label>*@
            @*<input type="number" id="cantidad" min="1" value="1">*@
            <button type="button" data-id="@Model.idProducto" class="btn btn-sm btn-fefault cart _cart">
                <i class="fa fa-shopping-cart"></i>
                Agregar al carro
            </button>
        </span>
        <div class="row">
            <div class="col-sm-12">

                <p>
                    <b id="disp">
                        Disponibilidad: @Html.Disponibilidad(Model.stock)
                    </b>
                </p>
            </div>
        </div>
        <p class="help-block">
            Este producto siempre esta disponible
        </p>
    }
    else
    {
        <span>
            @*<label>Cantidad:</label>*@
            @*<input type="number" id="cantidad" min="1" value="0" max="@Model.stock">*@
            <button type="button" disabled class="btn btn-sm btn-fefault cart disabled">
                <i class="fa fa-shopping-cart"></i>
                Agregar al carro
            </button>
        </span>
        <div class="row">
            <div class="col-sm-12">

                <p>
                    <b id="disp">
                        Disponibilidad: @Html.Disponibilidad(Model.stock)
                    </b>
                </p>
            </div>
        </div>
    }
}