@model IEnumerable<PymeTamFinal.Modelos.ModelosVista.CategoriasMenuRapido>
@{ Layout = null;}
<style>
    ._colapse {
        cursor: pointer !important;
    }
</style>

    <div class="left-sidebar">
        <h2>Categorias</h2>
        <div class="panel-group category-products" id="accordian">
            <!--category-productsr-->
            @foreach (var categoria in Model)
            {

                <div class="panel panel-default" id="panel_@categoria.idCategoria">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="_colapse" data-toggled="false" data-id="@categoria.idCategoria" data-parent="#accordian">
                                <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                @categoria.nombreCategoria
                            </a>
                        </h4>
                        <a href="@Url.Action("Productos", "Tienda", new { idCategoria=categoria.idCategoria})">Ver Productos </a>
                    </div>
                    <div id="@categoria.idCategoria" class="panel-collapse collapse">
                        <div id="contenedor_@categoria.idCategoria" class="panel-body">
