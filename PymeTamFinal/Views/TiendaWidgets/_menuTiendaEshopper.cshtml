@model IEnumerable<PymeTamFinal.Modelos.ModelosVista.CategoriasMenuRapido>
@{
    Layout = null;
}
<div class="header-bottom">
    <!--header-bottom-->
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="mainmenu pull-left">
                    <ul class="nav navbar-nav collapse navbar-collapse">
                        <li><a href="@Url.Action("Index", "Tienda", new { Area="" })" class="active">Inicio</a></li>
                        <li class="dropdown">
                            <a href="@Url.Action("Productos", "Tienda", new { Area="" })">Productos<i class="fa fa-angle-down"></i></a>
                            @*@{Html.RenderAction("CategoriasListaSimple", "Inicio", new { clasePadre = "sub-menu", claseHijos = "", Area = "Tienda" });}*@
                            <ul role="menu" class="sub-menu">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a href="@Url.Action("Productos", "Tienda", new { categoria = item.idCategoria,Area="" })">
                                        @item.nombreCategoria
                                        </a>
                                    </li>
                                }
                            </ul>

                        </li>
                        <li class="dropdown">
                            <a href="@Url.Action("Index", "AyudaPoliticas", new { Area="" })">Ayuda<i class="fa fa-angle-down"></i></a>
                            <ul role="menu" class="sub-menu">
                                <li><a href="@Url.Action("ComoComprar", "AyudaPoliticas", new { Area="" })">¿Como comprar?</a></li>
                                <li><a href="@Url.Action("Envios", "AyudaPoliticas", new { Area="" })">Envios</a></li>
                                <li><a href="@Url.Action("Politicas", "AyudaPoliticas", new { Area="" })">Politicas</a></li>
                                <li><a href="@Url.Action("Faq", "AyudaPoliticas", new { Area="" })">Preguntas frecuentes</a></li>
                            </ul>
                        </li>
                        <li><a href="@Url.Action("Contacto", "Inicio", new { Area="" })">Contacto</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-3">
                @using (Html.BeginForm("BuscarProducto", "Inicio", FormMethod.Post, new { @class = "navbar-form navbar-left" }))
                {
                    <div class="search_box pull-right">
                        <input name="consulta" type="search" placeholder="Buscar" />
                    </div>
                }
            </div>
        </div>
    </div>
</div><!--/header-bottom-->
