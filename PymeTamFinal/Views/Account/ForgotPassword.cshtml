@model PymeTamFinal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidaste tu contraseña?";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>@ViewBag.Title.</h2>
            </div>
        </div>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
            <div class="row">
                <div class="col-lg-12">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                @Html.AntiForgeryToken()
               
                <div class="form-group">
                    <div class="col-md-12">
                        <h4>Introduzca su email.</h4>
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <br />
                        @Html.Recaptcha()
                        <br />
                        <input type="submit" class="btn btn-default" value="Enviar correo" />
                    </div>
                </div>
            </div>

        }
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
