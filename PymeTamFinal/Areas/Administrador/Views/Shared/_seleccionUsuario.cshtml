@model IEnumerable<PymeTamFinal.Modelos.ModelosDominio.Cliente>
@{
    ViewBag.Title = "_seleccionUsuario";
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <h4>Seleccionar beneficiario</h4>
        <table id="clientes" class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        #Id
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Seleccionar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.idCliente
                        </td>
                        <td>
                            @item.nombreCliente
                        </td>
                        <td>
                            <div class="radio">

                                <label>
                                    <input value="@item.idCliente" type="radio" name="idCliente" /> Seleccionar
                                </label>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

