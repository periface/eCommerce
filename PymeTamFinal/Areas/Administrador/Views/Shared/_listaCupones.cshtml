@model IEnumerable<PymeTamFinal.Modelos.ModelosVista.CuponTablaViewModel>
@{ Layout = null;}
<div class="row">
    <div class="col-lg-12">
        <table id="tablaCupones" class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        #Id
                    </th>
                    <th>
                        Codigo
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>
                        Descuento
                    </th>
                    <th>
                        Estatus
                    </th>
                    <th>
                        Restricción
                    </th>
                    <th>
                        Cliente
                    </th>
                    <th>
                        Fecha de caducidad
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idCupon</td>
                        <td>
                            @item.codigoCupon
                        </td>
                        <td>
                            @item.tipoDesc
                        </td>
                        <td>
                            @item.descuento
                        </td>

                        <td>
                            @item.usado
                        </td>
                        <td>
                            @item.usoEnDescuentos
                        </td>
                        <td>
                            @item.cliente
                        </td>
                        <td>
                            @item.fechaCaducidad.ToShortDateString()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
