@model PymeTamFinal.Modelos.ModelosDominio.Seccion
@{
    ViewBag.Title = "Editar " + Model.nombreSeccion;
    Layout = "~/Areas/Administrador/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Editar sección <small>@Model.nombreSeccion</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i><a href="@Url.Action("Index","Secciones")"> Secciones</a>
                </li>
                <li class="active">
                    <i class="fa fa-dashboard"></i> Editar @Model.nombreSeccion
                </li>
            </ol>
        </div>
    </div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(a=>a.idSeccion)
        @Html.HiddenFor(a=>a.imagenSeccion)
        <div class="row">
            <div class="col-lg-12">
                @Html.imagen(Model.imagenSeccion,null,200,200)
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label class="control-label">
                    Nombre de sección
                </label>
                @Html.TextBoxFor(a => a.nombreSeccion, new { @class = "form-control" })
                @Html.ValidationMessageFor(a=>a.nombreSeccion)
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label class="control-label">
                    Contenido de la sección
                </label>
                @Html.TextAreaFor(a => a.contenidoSeccion, new { @class = "form-control" })
                @Html.ValidationMessageFor(a=>a.contenidoSeccion)
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <input type="file" name="imagen" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <div class="checkbox">
                    <label>

                        @Html.EditorFor(a => a.estadoSeccion, new { @class = "form-control" })
                        Habilitar
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </div>
    }

</div>