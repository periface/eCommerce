@model PymeTamFinal.Modelos.ModelosDominio.Seccion
@{
    ViewBag.Title = "Nueva Sección";
    Layout = "~/Areas/Administrador/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Nueva sección <small>Captura de sección</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i><a href="@Url.Action("Index","Secciones")"> Secciones</a>
                </li>
                <li class="active">
                    <i class="fa fa-dashboard"></i> Nueva Sección
                </li>
            </ol>
        </div>
    </div>
    @using (Html.BeginForm(null,null,FormMethod.Post, new { enctype="multipart/form-data" }))
    {
        <div class="row">
            <div class="form-group col-lg-6">
                <label class="control-label">
                    Nombre de sección
                </label>
                @Html.TextBoxFor(a => a.nombreSeccion, new { @class = "form-control" })
                @Html.ValidationMessageFor(a=>a.nombreSeccion)
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label class="control-label">
                    Contenido de la sección
                </label>
                @Html.TextAreaFor(a => a.contenidoSeccion, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.contenidoSeccion)
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <input type="file" name="imagen" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <div class="checkbox">
                    <label>

                        @Html.EditorFor(a => a.estadoSeccion, new { @class = "form-control" })
                        Habilitar
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </div>
    }
    
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }