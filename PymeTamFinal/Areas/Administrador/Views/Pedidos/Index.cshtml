@model IEnumerable<PymeTamFinal.Modelos.ModelosDominio.Orden>
@{
    ViewBag.Title = "Pedidos";
    Layout = "~/Areas/Administrador/Views/Shared/_Layout.cshtml";
}
<link href="~/Scripts/datatables/DataTables-1.10.9/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Pedidos <small>Administración de pedidos</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Mis pedidos
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary" href="#ventas"><i class="fa fa-dashboard"></i> Volumen de ventas</a>
            <a class="btn btn-primary" id="gEstados" href="#"><i class="fa fa-dashboard"></i> Grafica de estados</a>
            <a class="btn btn-primary" id="gPagos" href="#"><i class="fa fa-dashboard"></i> Medios de pago</a>
            <hr />
            <table id="pedidos" class="table table-responsive table-condensed">
                <thead>
                    <tr>
                        <th>
                            #Id
                        </th>
                        <th>
                            Cliente
                        </th>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Hora
                        </th>
                        <th>
                            Monto MXN
                        </th>
                        <th>
                            Estado
                        </th>
                        <th>
                            Tipo de pago
                        </th>
                        <th>
                            Estado del pago
                        </th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @*@foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.idOrden
                                </td>
                                <td>
                                    @item.ordenNombre
                                </td>
                                <td>
                                    @item.ordenFecha.ToShortDateString()
                                </td>
                                <td>
                                    @item.ordenFecha.ToShortTimeString()
                                </td>
                                <td>
                                   @Html.formatoPrecio(item.ordenTotal)
                                </td>
                                <td>
                                    @item.ordenEstadoPedido
                                </td>
                                <td>
                                    @item.ordenTipoPago
                                </td>
                                <td>@item.ordenPagado</td>
                                <td>
                                    <a href="#">Detalle</a>
                                </td>
                            </tr>
                        }*@
                </tbody>
            </table>
        </div>
    </div>
    <div id="ventas" class="row">
        <div class="col-lg-12">
            <div id="container" style="height: 400px; width:100%;"></div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.datatables.net/buttons/1.0.3/js/dataTables.buttons.min.js"></script>

    <script src="~/Areas/Administrador/PlugIns/HighStock/highstock.js"></script>
    <script src="~/Areas/Administrador/PlugIns/HighStock/exporting.js"></script>
    <script src="http://code.highcharts.com/highcharts-3d.js"></script>
    <script>
        var $modalGraficas = $("#modalGraficasPastel");
        var $modalGraficasMedios = $("#modalGraficasPastelMedios");
        var getConfig = function () {
            $.get("/Administrador/Pedidos/VolumenVentas", function (d) {
                //console.log(d);
                //Se modifico para traer listas de series

                var series = [];
                $.each(d.series, function (i, e) {
                    console.log(e);
                    series.push({
                        name: e.name,
                        data: e.data,
                        tooltip: {
                            valueDecimals: 2
                        }
                    });
                });
                //console.log(series);
                $('#container').highcharts("StockChart", {

                    rangeSelector: {
                        selected: 5
                    },

                    title: {
                        text: d.title.text
                    },
                    series: series
                    //series: [{
                    //    name: d.series.name,
                    //    data: d.series.data,
                    //    tooltip: {
                    //        valueDecimals: 2
                    //    }
                    //}]
                });
            });
        }
        var getConfigPastel = function () {
            $.get("/Administrador/Pedidos/Estados", function (d) {
                var series = [];
                $.each(d.series, function (i, e) {
                    series.push({
                        name: e.name,
                        data: e.data,
                        tooltip: {
                            valueDecimals: 2
                        }
                    });
                });
                $('#graficaPastel').highcharts({
                    chart: d.chart,
                    chart: {
                        type: 'pie',
                        options3d: {
                            enabled: true,
                            alpha: 45
                        }
                    },
                    title: d.title,
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                    },
                    plotOptions: {
                        pie: {
                            allowPointSelect: true,
                            cursor: 'pointer',

                            innerSize: 100,
                            depth: 50,
                            allowPointSelect: true,
                            cursor: 'pointer',
                            dataLabels: {
                                enabled: true,
                                format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                                style: {
                                    color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                                }
                            },
                        }
                    },
                    series: series
                });
            });
        }
        var getConfigPastelMedios = function () {
            $.get("/Administrador/Pedidos/TiposPago", function (d) {
                console.log(d);
                var colors = Highcharts.getOptions().colors;
                var pagosData = [];
                var estadosData = [];
                var brightness;
                var pagosLen = d.series[0].data.length;
                for (var i = 0; i < pagosLen; i++) {
                    pagosData.push({
                        name: d.categorias[i],
                        y: d.series[0].data[i].y,
                        color: colors[i]
                    });
                    var dataDrillLength = d.series[0].data[i].drillDown.data.length;
                    for (var j = 0; j < dataDrillLength; j++) {
                        brightness = 0.2 - (j / dataDrillLength) / 5;
                        estadosData.push({
                            name: d.series[0].data[i].drillDown.categories[j],
                            y: d.series[0].data[i].drillDown.data[j],
                            color: Highcharts.Color(pagosData[i].color).brighten(brightness).get(),
                        });
                    }
                }
                $('#graficaPastelMedios').highcharts({
                    //chart: d.chart,
                    chart: {
                        type: 'pie',
                        //options3d: {
                        //    enabled: true,
                        //    alpha: 45
                        //},
                    },
                    title: d.title,
                    subtitle: {
                        text: 'Medios de pago utilizados y distribución de estatus de pedidos'
                    },
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                    },
                    plotOptions: {
                        pie: {
                            shadow: false,
                            center: ['50%', '50%'],
                            //allowPointSelect: true,
                            cursor: 'pointer',
                            //point: {
                            //    events: {
                            //        click: function (event) {
                            //            $("#medios").fadeOut();
                            //            var options = this.options;
                            //            var medio = event.currentTarget.name;
                            //            console.log(medio);
                            //            $("#contenedorMedios").load("/Administrador/Pedidos/MediosFiltro/?medio=" + medio, function () {
                            //                var tableFiltroMedio = $('.pedidosFiltroMedio').DataTable({
                            //                    "language": {
                            //                        "sProcessing": "Procesando...",
                            //                        "sLengthMenu": "Mostrar _MENU_ registros",
                            //                        "sZeroRecords": "No se encontraron resultados",
                            //                        "sEmptyTable": "Ningún dato disponible en esta tabla",
                            //                        "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                            //                        "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                            //                        "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                            //                        "sInfoPostFix": "",
                            //                        "sSearch": "Buscar:",
                            //                        "sUrl": "",
                            //                        "sInfoThousands": ",",
                            //                        "sLoadingRecords": "Cargando...",
                            //                        "oPaginate": {
                            //                            "sFirst": "Primero",
                            //                            "sLast": "Último",
                            //                            "sNext": "Siguiente",
                            //                            "sPrevious": "Anterior"
                            //                        },
                            //                        "buttons": {
                            //                            "copyTitle": 'Tabla copiada',
                            //                            "copyInfo": {
                            //                                _: '%d Filas copiadas',
                            //                                1: '1 fila copiada'
                            //                            },
                            //                            'copy': 'Copiar',
                            //                            'excel': 'Exportar a excel',
                            //                            "colvis": "Columnas visibles"
                            //                        },

                            //                        "oAria": {
                            //                            "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                            //                            "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                            //                        }
                            //                    },

                            //                });
