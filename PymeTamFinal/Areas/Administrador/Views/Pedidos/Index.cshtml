                            //    }
                            //},


                        },
                        //startAngle: -90,
                        //endAngle: 90,
                        //center: ['50%', '75%']
                    },
                    series: [
                        {
                            size: '60%',
                            dataLabels: {
                                formatter: function () {
                                    return this.y > 5 ? this.point.name : null;
                                },
                                color: '#ffffff',
                                distance: -30
                            },
                            name: "Tipos de pago",
                            data: pagosData,
                        },
                        {
                            size: '80%',
                            innerSize: '60%',
                            name: "Estado de pedidos",
                            data: estadosData,
                            dataLabels: {
                                formatter: function () {
                                    // display only if larger than 1
                                    return this.y > 1 ? '<b>' + this.point.name + ':</b> ' + this.y + '%' : null;
                                }
                            }
                        },


                    ]
                });
            });
        }
        Highcharts.setOptions({
            lang: {
                months: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
                weekdays: ['Domingo', 'Lunes', 'Martes', 'Miercoles', 'Jueves', 'Viernes', 'Sabado'],
                downloadJPEG: 'Descargar archivo jpg',
                downloadPDF: 'Descargar PDF',
                printChart: "Imprimir grafica",
                rangeSelectorTo: "A",
                rangeSelectorFrom: "De",
                downloadPNG: "Descargar PNG",
                downloadSVG: "Descargar SVG",
            },
        });
        $('#graficaPastel').highcharts("StockChart", getConfigPastel());
        $('#graficaPastelMedios').highcharts("StockChart", getConfigPastelMedios());
        $('#container').highcharts("StockChart", getConfig());
        $("#gEstados").click(function () {

            var pastel = $('#graficaPastel').highcharts();
            $('#modalGraficasPastel').on('show.bs.modal', function () {
                $('#graficaPastel').css('visibility', 'hidden');
            });
            $('#modalGraficasPastel').on('shown.bs.modal', function () {
                $('#graficaPastel').css('visibility', 'initial');
                pastel.reflow();
            });
            $modalGraficas.modal({
                show: true
            });
        });
        $("#gPagos").click(function () {

            var pastel = $('#graficaPastelMedios').highcharts();
            $('#modalGraficasPastelMedios').on('show.bs.modal', function () {
                $('#graficaPastelMedios').css('visibility', 'hidden');
            });
            $('#modalGraficasPastelMedios').on('shown.bs.modal', function () {
                $('#graficaPastelMedios').css('visibility', 'initial');
                pastel.reflow();
            });
            $modalGraficasMedios.modal({
                show: true
            });
        });

        var table = $('#pedidos').DataTable({
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "Ningún dato disponible en esta tabla",
                "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
