                    },
                    'copy': 'Copiar',
                    'excel': 'Exportar a excel',
                    "colvis": "Columnas visibles"
                },

                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            },
            "dom": 'lrBftip',
            buttons: [{
                extend: 'excel',
                exportOptions: {
                    columns: [0, 1, 2, 3, 4, 5, 6, 7]
                }
            },
                {
                    extend: 'copy',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4, 5, 6, 7]
                    }
                }
            ],
            "bAutoWidth": false,
            "bServerSide": true,
            "sAjaxSource": "/Administrador/Pedidos/PedidosJson",
            "bProcessing": true,
            "aoColumns": [
              {
                  "sName": "idOrden",
              },
              { "sName": "cliente" },
              { "sName": "ordenFecha" },
              { "sName": "ordenHora" },
              { "sName": "ordenTotal" },
              { "sName": "ordenEstadoPedido" },
              { "sName": "ordenTipoPago" },
              { "sName": "ordenPagado" },
              {
                  "sName": "ordenDetalle", "bSearchable": false,
                  "bSortable": false,
              }

            ]
        });

        //table.buttons().container().appendTo($('.col-sm-6:eq(0)', table.table().container()));
    </script>
}
