@model PymeTamFinal.Modelos.ModelosDominio.Producto
@{
    ViewBag.Title = "Editar Producto "+Model.nombreProducto;
    Layout = "~/Areas/Administrador/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Editar producto <small>Edición de @Model.nombreProducto</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i><a href="@Url.Action("Index", "Productos")"> Mis productos</a>
                </li>
                <li class="active">
                    <i class="fa fa-dashboard"></i> Editar @Model.nombreProducto
                </li>
            </ol>
        </div>
    </div>
    @{Html.RenderPartial("_formularioEditarProducto", Model);}
</div>
@section Scripts{
    <script src="~/Areas/Administrador/PlugIns/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('descripcionProducto', {

        });
    </script>
}

