@model PymeTamFinal.Modelos.ModelosDominio.Banco
@{
    ViewBag.Title = "Editar Banco "+Model.bancoNombre;
    Layout = "~/Areas/Administrador/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Editar banco <small>Formulario de edición</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Bancos")"><i class="fa fa-dashboard"></i> Bancos</a>
                </li>
                <li class="active">
                    <i class="fa fa-dashboard"></i> Editar Banco
                </li>
            </ol>
        </div>
    </div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(a=>a.bancoId)
        @Html.HiddenFor(a => a.bancoImagen)
        <div class="row">
            <div class="form-group col-lg-5">
                <label class="control-label">
                    Banco
                </label>
                @Html.TextBoxFor(a => a.bancoNombre, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label class="control-label">
                    No. de Convenio
                </label>
                @Html.TextBoxFor(a => a.bancoNConvenio, new { @class = "form-control" })
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label">
                    No. de Referencia
                </label>
                @Html.TextBoxFor(a => a.bancoReferencia, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-5">
                <label class="control-label">
                    Imagen
                </label>
                <input type="file" name="imagen" class="form-control" />
                @Html.imagen(Model.bancoImagen,null)
            </div>
            <div class="form-group col-lg-5">
                <label class="control-label">Opciones</label>
                <div class="checkbox">
                    <label>
                        @Html.EditorFor(a => a.bancoActivo) Habilitar banco
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Guardar</button>
    }
</div>
